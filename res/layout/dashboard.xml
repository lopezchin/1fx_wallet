<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
   	android:isScrollContainer="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_status"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/raduis_black"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/usr_logo" />

                        <LinearLayout
                            android:id="@+id/linearLayout1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/imageView1"
                            android:orientation="vertical"
                            android:padding="10dp" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="TENAJ D. SELOPAN"
                                android:textColor="#fff"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="1ST FIRST, NEW YORK, NY"
                                android:textColor="#fff"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1234 567 890 020"
                                android:textColor="#ff005a"
                                android:textSize="18sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/raduis_shape2"
                    android:orientation="vertical" >

                    <SearchView
                        android:id="@+id/searchView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:paddingTop="8dp"
                            android:text="Send money to a friend"
                            android:textColor="#707070"
                            android:textSize="12sp" />
						
                    </SearchView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="#95ffffff"
                    android:orientation="vertical" >
                    
					<TableRow
					    android:id="@+id/tableRow5"
					    android:layout_width="match_parent"
					    android:layout_height="match_parent"
						android:background="#40ffffff">

						<ImageButton
						    android:id="@+id/imageButton1"
						    android:layout_width="fill_parent"
						    android:layout_height="match_parent"
						    android:src="@drawable/sale"
							android:background="#40ffffff"
					        android:layout_weight=".3" 		
					        android:contentDescription="image1"			        
					        android:layout_gravity="left" 
					        android:gravity="center_horizontal" />
                        
					    <ImageButton
					        android:id="@+id/registerFB"
					        android:layout_height="fill_parent"
					        android:layout_width="match_parent" 
					      	android:src="@drawable/trans"
							android:background="#40ffffff"
					        android:layout_weight=".3" 
					        android:contentDescription="image2"
					        android:gravity="center_horizontal"/>
					
					    <ImageButton
					        android:id="@+id/clearCredentials"
					        android:layout_height="fill_parent"
					        android:layout_width="match_parent"
							android:src="@drawable/conv"
							android:background="#40ffffff"
					        android:layout_weight=".3" 
					        android:contentDescription="image3"
					        android:layout_gravity="right" 
					        android:gravity="center_horizontal"/>
					
					</TableRow>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="GRAPH CHART"
                        android:textColor="#787676"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/graph" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="150dp"
                            android:layout_height="30dp"                                
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:background="#fff"
                            android:textSize="12sp"
                            android:text="@string/walletSummary" 
                            />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="150dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:background="#fff"
                            android:textSize="12sp"
                            android:text="@string/currentBalance" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ececec"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                android:background="@drawable/border_top_blue_radius"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="USD"
                                android:textSize="25sp"                                
                            	android:paddingTop="0dp"
                            	android:paddingBottom="0dp"
                            	android:paddingLeft="5dp"
                            	android:paddingRight="5dp"  />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="55.84 + 0.40" 
                                android:background="@drawable/border_top_radius_bottom"
                                android:paddingTop="5dp"
                            	android:paddingBottom="5dp"
                            	android:paddingLeft="5dp"
                            	android:paddingRight="5dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/linearLayout2"
                            android:orientation="vertical"
                            android:background="@drawable/radius_shape3"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                           		android:paddingTop="3dp"
                                android:text="CURRENT BALANCE - MILLION " />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                android:textColor="#0f93b9"
                                android:text="$ 12,030,342" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" 
                        android:background="@drawable/border_top_green_radius"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <LinearLayout
                                android:id="@+id/linearLayout4"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/border_right_green"
                                android:orientation="vertical"
                                android:paddingBottom="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp" >

                                <TextView
                                    android:id="@+id/billion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/billion"
                                    android:textColor="#707070"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/netprof"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/netprof"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/linearLayout4"
                                android:text="$ + 800,200,455.00"
                                android:textColor="#00af88"
                                android:textSize="20sp" 
                                android:paddingLeft="10dp"  />
                        </RelativeLayout>

                    </LinearLayout>
                    
                     <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" 
                        android:background="@drawable/border_top_red_radius"
                        android:layout_marginTop="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <LinearLayout
                                android:id="@+id/linearLayout44"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="2dp"
                                android:background="@drawable/border_right_red"
                                android:orientation="vertical"
                                android:paddingBottom="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp" >

                                <TextView
                                    android:id="@+id/thousand"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/thousand"
                                    android:textColor="#707070"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/expenses"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/expenses"
                                    android:textSize="15sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView122"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@+id/linearLayout44"
                                android:text="$ - 400,565,452.50"
                                android:textColor="#ff0030"
                                android:textSize="20sp" 
                                android:paddingLeft="10dp"  />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                         <Button
                             android:id="@+id/button3"
                             android:layout_width="match_parent"
                             android:layout_height="35dp"
                             android:text="PURCHASE CURRENCY"
                             android:background="@drawable/radius_green"
                             android:layout_marginTop="10dp"                             
                             android:textColor="#ffffff" 
                             android:textSize="13sp"/>

                         <Button
                             android:id="@+id/button4"
                             android:layout_width="match_parent"
                             android:layout_height="35dp"
                             android:layout_marginTop="10dp"
                             android:background="@drawable/radius_white"
                             android:text="CURRENCY BALANCE"  
                             android:gravity="left|center_vertical"
                             android:paddingLeft="10dp"                           
                             android:textColor="#707070"
                             android:textSize="13sp"/>

                         <Button
                             android:id="@+id/button5"
                             android:layout_width="match_parent"
                             android:layout_height="35dp"
                             android:layout_marginTop="10dp"
                             android:background="@drawable/radius_white"
                             android:text="LATEST TRANSACTION" 
                             android:gravity="left|center_vertical"    
                             android:paddingLeft="10dp"                        
                             android:textColor="#707070"
                             android:textSize="13sp"/>

                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:paddingTop="10dp" >

                         <TableRow
                             android:id="@+id/tableRow1"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_weight="1" >

                             <ImageView
                                 android:id="@+id/imageView2"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="1"
                                 android:src="@drawable/image1" />
                             
                             <ImageView
                                 android:id="@+id/imageView2"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="1"
                                 android:paddingLeft="2dp"
                                 android:paddingRight="2dp"
                                 android:src="@drawable/image2" />
                             
                             <ImageView
                                 android:id="@+id/imageView2"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:layout_weight="1"
                                 android:src="@drawable/image3" />

                         </TableRow>

                     </LinearLayout>

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical" 
                         android:layout_marginTop="10dp">

                         <ImageButton
                             android:id="@+id/button6"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:src="@drawable/ic_drawer"
                             android:background="@drawable/radius_white"
                             android:padding="5dp"/>

                     </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>